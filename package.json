{
  "name": "noaa-d3",
  "version": "1.0.0",
  "description": "NOAA data with d3.js",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server:dev\" \"sleep 2 && npm run client:dev\"",
    "server:dev": "nodemon server.js",
    "client:dev": "browser-sync start --proxy 'localhost:3000' --port 3001 --ui-port 3002 --files '*.html,*.css,*.js' --ignore 'node_modules' --ignore '__tests__' --ignore 'coverage' --no-notify",
    "build": "echo 'No build step required for this project'",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "d3": "^7.9.0",
    "duckdb": "^1.3.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.1.0",
    "eslint": "^9.29.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!eslint.config.js",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
